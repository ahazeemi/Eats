<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.eats.Activities.EatsMainActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="226dp"
            android:layout_height="143dp"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/el_messiri_bold"
            android:text="eats"
            android:textAppearance="@style/TextAppearance.AppCompat.Display4"
            android:textColor="@color/colorPrimaryDark" />



        <Button
            android:id="@+id/hallManager"
            style="?android:textAppearanceSmall"
            android:layout_width="250dp"
            android:layout_height="64dp"
            android:layout_alignParentBottom="true"

            android:layout_marginTop="20dp"
            android:background="@drawable/button_rounded_corners_actual"
            android:onClick="onHallManagerClick"
            android:text="Hall Manager"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.379"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/customer" />

        <Button
            android:id="@+id/chefMiniOrder"
            style="?android:textAppearanceSmall"
            android:layout_width="250dp"
            android:layout_height="65dp"
            android:layout_alignParentBottom="true"

            android:layout_marginTop="20dp"
            android:background="@drawable/button_rounded_corners_actual"
            android:onClick="chefComplaintClick"
            android:text="Chef Mini Order"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.381"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/admin" />

        <Button
            android:id="@+id/admin"
            style="?android:textAppearanceSmall"
            android:layout_width="250dp"
            android:layout_height="65dp"
            android:layout_alignParentBottom="true"

            android:layout_marginTop="20dp"
            android:background="@drawable/button_rounded_corners_actual"
            android:onClick="onAdminClick"
            android:text="Admin"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.432"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <Button
            android:id="@+id/customer"
            style="?android:textAppearanceSmall"
            android:layout_width="250dp"
            android:layout_height="65dp"
            android:layout_alignParentBottom="true"

            android:layout_marginTop="20dp"
            android:background="@drawable/button_rounded_corners_actual"
            android:onClick="onCustomerClick"
            android:text="Order"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.434"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/admin" />

        <Button
            android:id="@+id/headChef"
            style="?android:textAppearanceSmall"
            android:layout_width="250dp"
            android:layout_height="65dp"
            android:layout_alignParentBottom="true"

            android:layout_marginTop="20dp"
            android:background="@drawable/button_rounded_corners_actual"
            android:onClick="onHeadChefClick"
            android:text="Head Chef"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.381"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hallManager"
            app:layout_constraintVertical_bias="0.0" />



    </LinearLayout>
</ScrollView>


</android.support.constraint.ConstraintLayout>
