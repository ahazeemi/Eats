<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_menu_item_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:foreground="?attr/selectableItemBackground"
    android:padding="16dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/item_pic"
            android:layout_width="73dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="8dp"
            android:src="@drawable/chicken_karahi"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />


        <TextView
            android:id="@+id/item_name"
            android:layout_width="184dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="24dp"
            android:layout_toEndOf="@id/item_pic"
            android:fontFamily="@font/montserrat"
            android:orientation="vertical"
            android:text="Chicken Karahi (Full)"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/item_pic"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/item_quantity"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="40dp"
            android:background="@drawable/rounded_textview"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:text="2"
            android:textColor="@android:color/white"
            app:layout_constraintBaseline_toBaselineOf="@+id/item_name"
            app:layout_constraintStart_toEndOf="@+id/item_name" />




    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>