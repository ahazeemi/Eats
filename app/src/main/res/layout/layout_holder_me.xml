<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="@dimen/space10"
    android:layout_marginLeft="@dimen/spaceLR"
    android:weightSum="1">


    <TextView
        android:id="@+id/tv_chat_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@color/colorNewTitle"
        android:padding="@dimen/space10"

        android:text="Hi, joe how are you, do you like to join our party in next week because you don't like party?"
        android:textColor="@android:color/white"
        android:textSize="15dp" />

    <ImageView

        android:id="@+id/messImage"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="0dp"
        android:layout_weight="8.40"
        android:maxWidth="250dp"
        android:padding="0dp"
        android:scaleType="fitXY"
        tools:layout_width="match_parent" />


</RelativeLayout>