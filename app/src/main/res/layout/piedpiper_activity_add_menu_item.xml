<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.eats.Activities.PiedPiperAddMenuItemActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Add Menu Item"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.015" />

    <EditText
        android:id="@+id/et_name_dish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Name of dish"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/et_prep_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Preparation time"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/et_name_dish"
        app:layout_constraintStart_toStartOf="@+id/et_name_dish"
        app:layout_constraintTop_toBottomOf="@+id/et_name_dish" />

    <EditText
        android:id="@+id/et_sales_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Sale price"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/et_prep_time"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_prep_time"
        app:layout_constraintTop_toBottomOf="@+id/et_prep_time" />

    <Spinner
        android:id="@+id/sp_type"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:entries="@array/type_dish"
        app:layout_constraintEnd_toEndOf="@+id/et_sales_price"
        app:layout_constraintHorizontal_bias="0.393"
        app:layout_constraintStart_toStartOf="@+id/et_sales_price"
        app:layout_constraintTop_toBottomOf="@+id/et_sales_price" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Add"
        app:layout_constraintEnd_toEndOf="@+id/sp_ing_5"
        app:layout_constraintStart_toStartOf="@+id/sp_ing_5"
        app:layout_constraintTop_toBottomOf="@+id/sp_ing_5" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="Ingredients"
        app:layout_constraintEnd_toEndOf="@+id/sp_type"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/sp_type"
        app:layout_constraintTop_toBottomOf="@+id/sp_type" />

    <Spinner
        android:id="@+id/sp_ing_1"
        android:layout_width="211dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/textView8"
        app:layout_constraintHorizontal_bias="0.722"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <Spinner
        android:id="@+id/sp_ing_2"
        android:layout_width="211dp"
        android:layout_height="33dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/sp_ing_1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/sp_ing_1"
        app:layout_constraintTop_toBottomOf="@+id/sp_ing_1" />

    <Spinner
        android:id="@+id/sp_ing_3"
        android:layout_width="211dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/sp_ing_2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/sp_ing_2"
        app:layout_constraintTop_toBottomOf="@+id/sp_ing_2" />

    <Spinner
        android:id="@+id/sp_ing_4"
        android:layout_width="211dp"
        android:layout_height="33dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/sp_ing_3"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/sp_ing_3"
        app:layout_constraintTop_toBottomOf="@+id/sp_ing_3" />

    <Spinner
        android:id="@+id/sp_ing_5"
        android:layout_width="211dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/sp_ing_4"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/sp_ing_4"
        app:layout_constraintTop_toBottomOf="@+id/sp_ing_4" />

    <EditText
        android:id="@+id/et_ing_1"
        android:layout_width="47dp"
        android:layout_height="32dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/sp_ing_1"
        app:layout_constraintTop_toBottomOf="@+id/sp_type" />

    <EditText
        android:id="@+id/et_ing_2"
        android:layout_width="46dp"
        android:layout_height="35dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/sp_ing_2"
        app:layout_constraintTop_toBottomOf="@+id/et_ing_1" />

    <EditText
        android:id="@+id/et_ing_3"
        android:layout_width="46dp"
        android:layout_height="29dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/sp_ing_3"
        app:layout_constraintTop_toBottomOf="@+id/et_ing_2" />

    <EditText
        android:id="@+id/et_ing_4"
        android:layout_width="43dp"
        android:layout_height="35dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/sp_ing_4"
        app:layout_constraintTop_toBottomOf="@+id/et_ing_3" />

    <EditText
        android:id="@+id/et_ing_5"
        android:layout_width="41dp"
        android:layout_height="34dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/sp_ing_5"
        app:layout_constraintTop_toBottomOf="@+id/et_ing_4" />

</android.support.constraint.ConstraintLayout>